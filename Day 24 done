#include <stdio.h>
#include <math.h>

int main() {
    double number, result;

    printf("Enter a number: ");
    scanf("%lf", &number);

    if (number >= 0) {
        result = sqrt(number);
        printf("Square root of %.2lf is %.2lf\n", number, result);
    } else {
        printf("Cannot calculate the square root of a negative number.\n");
    }

    return 0;
}
